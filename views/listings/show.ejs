<% layout("layout/boilerplate.ejs") %>
<body>
  <h3 class="text-center mb-3"><%= listing.title %></h3>
  <div class="card w-50 offset-3 mb-5 listing-card" style="width: 18rem">
    <img src="<%= listing.image%>" class="card-img-top" alt="..." />
    <div class="card-body">
      <p class="card-text">
        <p>
          <i><%= listing.owner.username %></i>
        </p>
        <p>

        
        <div><%= listing.description %></div>
        <div>Rs. : <%= listing.price.toLocaleString("en-PK") %></div>
        <div><%= listing.location %></div>
        <div><%= listing.country %></div>
        </p>
      </p>
      <% if( currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="d-flex flex-row justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>
        <form
          action="/listings/<%= listing._id %>/delete?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div>
        <hr>
        <% if (currUser) { %>
          
        
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="rating">Rating</label>
            <input type="range" name="review[rating]" id="rating" min="1" max="5">
          </div>
          <fieldset class="starability-slot">
            <legend>Rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
          </fieldset>
          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment"
            rows="5"
            cols="30"
            class="form-control"
            required
            ></textarea>
            <div class="invalid-feedback">Please submit some comment for review</div>
          </div>
          <button class="btn btn-dark">Submit</button>
        </form>
        <% } %>
        <div class="mt-4">
          <h4>All reviews</h4>
          <div class="row">
            <% for(review of listing.reviews) { %>
              <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                  <h5 class="card-title"><% review.author.email %></h5>
                  <div class="card-text"><%= review.comment %></div>
                  <div class="card-text"><%= review.rating %> star</div>
                </div>
                <% if( currUser && review.author._id.equals(currUser._id) ) {%>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>" class="mb-2" method="POST">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
                <% } %>
              </div>
            <% } %> 
          </div>
          
        </div>

      </div>
    </div>
  </div>
</body>