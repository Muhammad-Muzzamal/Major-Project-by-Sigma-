<% layout("layout/boilerplate.ejs") %>
<body>
  <div>
    <h1 class="text-center mb-4">All Listings</h1>
    <div class="row g-4">
      <% for(let listing of allListing) { %>

      <a
        href="/listings/<%= listing._id %>"
        class="col-12 col-md-6 col-lg-4 mb-4 card-link-show"
      >
        <div class="card h-100 listing-card">
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem; object-fit: cover"
          />
          <div class="card-img-overlay">Listings</div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              Rs. <%= listing.price.toLocaleString("en-PK") %> / night
            </p>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </div>
</body>
